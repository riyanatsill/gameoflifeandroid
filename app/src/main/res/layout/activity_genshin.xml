                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CARA MEMBELI"
                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/text1"
                    android:textAlignment="center" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genesis Crystal Genshin Impact"
                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/text2"
                    android:layout_below="@+id/text1"
                    android:textAlignment="textStart" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Masukkan Riot ID &amp; Tagline akun kalian"
                    android:textSize="9pt"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/text3"
                    android:textAlignment="textStart"
                    android:layout_below="@+id/text2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Pilih Nominal GC yang diinginkan"
                    android:textSize="9pt"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/text4"
                    android:layout_below="@+id/text3"
                    android:textAlignment="textStart" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. Pilih Metode Pembayaran"
                    android:textSize="9pt"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/text5"
                    android:layout_below="@+id/text4"
                    android:textAlignment="textStart" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. Masukkan alamat e-mail kalian untuk rincian pesanan"
                    android:textSize="9pt"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/text6"
                    android:layout_below="@+id/text5"
                    android:textAlignment="textStart" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5. Konfirmasi dan pastikan membayar dengan Jumlah Total Harga yang benar"
                    android:textSize="9pt"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/text7"
                    android:layout_below="@+id/text6"
                    android:textAlignment="textStart" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6. Tunggu sampai 1-15 Menit. GC akan masuk secepat kilat"
                    android:textSize="9pt"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/text8"
                    android:layout_below="@+id/text7"
                    android:textAlignment="textStart" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(Mohon kesediannya menunggu, GC diproses secara manual maka disesuaikan dengan antrian)"
                    android:textSize="9pt"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/text9"
                    android:textAlignment="textStart"
                    android:layout_below="@+id/text8" />
            </RelativeLayout>
